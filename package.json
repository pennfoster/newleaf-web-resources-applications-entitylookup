{
  "name": "@pennfoster/newleaf-web-resources-applications-entitylookup",
  "version": "1.0.0",
  "description": "Repository containing entity lookup application, which is used to add 3rd-level filtering for Model-Driven Apps",
  "types": "./dist/pf_EntityLookup.d.ts",
  "type": "module",
  "private": false,
  "main": "dist/pf_EntityLookup.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@azure/identity": "^4.10.2",
    "@pennfoster/newleaf-web-resources-core": "^1.0.10",
    "@pennfoster/newleaf-web-resources-domain": "^1.0.14",
    "@pennfoster/newleaf-web-resources-services-dynamics": "^1.0.6",
    "lodash": "^4.17.21",
    "npm": "^11.5.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@types/xrm": "^9.0.87",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.38.0",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "glob": "^11.0.3",
    "glob-parent": "^5.1.2",
    "globals": "^16.3.0",
    "mocha": "^11.7.1",
    "mocha-junit-reporter": "^2.2.1",
    "mv": "^2.1.1",
    "nodemon": "^3.1.10",
    "path": "^0.12.7",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vsts-npm-auth": "^0.43.0",
    "worker-loader": "^3.0.8"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/*",
      "dist/*"
    ],
    "ext": "js,ts",
    "path": "src/**/*",
    "delay": 1000
  },
  "scripts": {
    "format": "prettier ./src/**/*.ts --write",
    "prelint": "npm run format",
    "lint": "eslint ./src/**/*.ts --fix",
    "test:watch": "nodemon --exec npm run test:dev",
    "test:watch:no-coverage": "mocha --watch",
    "build:only": "tsup",
    "build": "npm run build:only",
    "prebuild": "npm run lint && npm run test",
    "postbuild": "node rename-files.js",
    "test": "npm run test:ci && npm run test:dev",
    "test:ci": "c8 mocha --reporter mocha-junit-reporter || exit 0",
    "test:dev": "c8 --reporter=text --reporter=lcovonly mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pennfoster/newleaf-web-resources-applications-entitylookup.git"
  },
  "author": "cdavis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pennfoster/newleaf-web-resources-applications-entitylookup/issues"
  },
  "homepage": "https://github.com/pennfoster/newleaf-web-resources-applications-entitylookup#readme"
}
